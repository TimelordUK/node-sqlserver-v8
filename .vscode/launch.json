    "version": "0.2.0",
    "configurations": [
    {
        "name": "Node Cmd Test",
        "program": "${workspaceFolder}/unit.tests/cmd-test.js",
        "args": [
            "-t", 
            "memory"
        ],
        "request": "launch",
        "skipFiles": [
            "<node_internals>/**"
        ],
        "cwd": "${workspaceFolder}",
        "type": "pwa-node"
    },
        
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "C:/Program Files/nodejs/node.exe",
            "args": [
               "simple-demo"
               // "runtest", "-k", "linux", 
               // "runtest", "-k", "linux", 
               //  "-t", "querycancel",
               // "-t", "pause"
               // "-t", "prepared",
               // "-t", "compoundqueries",
               // "-t", "query",
               // "-t", "multiple-errors", 
               // "-t", "geography",
               //"-t", "tvp",
               //"-t", "warnings",
               // "-t", "txn",
               // "-t", "datatypes",
               // "-t", "sproc"
               // "-t", "params"
               // "-t", "bulk",
               // "-t", "bcp"
               //"-t", "json"
               "-t", "promises" 
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/samples/javascript",
            // "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false
        },
       
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "/home/stephen/.nvm/versions/node/v15.12.0/bin/node",
            "args": [
                "runtest", "-k", "wsl",
                "-t", "prepared", 
                // "-t", "warnings", 
                // "-t", "bulk", 
                // "-t", "querycancel",
                // "-t", "pause",
                // "-t", "datatypes",
                // "-t", "query",
                // "-t", "tvp"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        
        {
            "cwd": "${workspaceFolder}/samples/typescript",
            "type": "node",
            "request": "launch",
            "name": "Launch Node TS",
            "program": "dist/promises.js",
            // "preLaunchTask": "tsc: build tsconfig.json",
            "outFiles": ["${workspaceFolder}/samples/typescript/dist/**/*.js"]
          }
    ]
}